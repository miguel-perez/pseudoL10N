{
  "manifest_version": 2,

  "name": "pseudol10n",
  "description": "A script to translate your site into a pseudo localization language for front-end testing.",
  "version": "1.0",

  "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "form.html"
  },

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
